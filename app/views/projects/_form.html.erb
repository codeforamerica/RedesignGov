<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Organization Name' %><br />
    <%= f.text_field :org_name %>
  </div>
  <div class="field">
    <%= f.label 'Organization Description' %><br />
    <%= f.text_field :org_desc %>
  </div>
  <div class="field">
	<%= f.label 'Three core values to be expressed in the logo' %>
    <%= f.text_field :valueOne %>
    <%= f.text_field :valueTwo %>
    <%= f.text_field :valueThree %>
  </div>
  <div class="field">
    <%= f.label :colors %><br />
    <%= f.text_area :colors %>
  </div>
  <div class="field">
    <%= f.label :font %><br />
	<%=autocomplete_field_tag 'name', '', projects_autocomplete_font_name_path %>	
  </div>
  <div class="field">
    <%= f.label :deadline %><br />
    <%= f.date_select :deadline %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </div>
  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
